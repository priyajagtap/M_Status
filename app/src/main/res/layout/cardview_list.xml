<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rel_ly_list"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:tag="cards main container">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_status_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        android:layout_centerInParent="true"
        card_view:cardBackgroundColor="@android:color/transparent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >


            <TextView
                android:text="।।स्वताच्या मनगाटावर विश्वास आसणार्याला दुसर्याच्या सामर्थ्याची भीती कधीच वाटत नाही आणि आशा सामर्थ्याला हरवण्याचे धाडस नियती सुध्दा करत नाही।।
-छत्रपति शिवाजी महाराज.."
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textStyle="bold"

                android:textColor="@android:color/black"
                android:textSize="17dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/tv_status_list"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/transparent"
                />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>