<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    tools:context="com.primol.m_status.MainActivity"
    android:background="@drawable/bgtest9">

    <com.google.android.gms.ads.AdView
        android:id="@+id/ad_Top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/ad_Top"
        android:layout_above="@+id/linearLayout">
        <ImageView
            android:id="@+id/up"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/up"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/left"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="50dp"
                android:src="@drawable/left"
                android:layout_gravity="center"
                />

            <TextView
                android:text="।।स्वताच्या मनगाटावर विश्वास आसणार्याला दुसर्याच्या सामर्थ्याची भीती कधीच वाटत नाही आणि आशा सामर्थ्याला हरवण्याचे धाडस नियती सुध्दा करत नाही।।
-छत्रपति शिवाजी महाराज.."
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20dp"
                android:id="@+id/tv_status"
                android:background="@android:color/transparent"
                />
            <ImageView
                android:id="@+id/right"
                android:layout_weight="0.25"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:src="@drawable/right"
                android:layout_gravity="center"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/down"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/down"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/ad"
        android:layout_marginBottom="5dp"
        android:id="@+id/linearLayout"
        >


        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/iv_previous"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:layout_height="70dp"
            android:paddingBottom="10dp"
            android:src="@drawable/previous_new"
            android:background="@null"
            />



        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/iv_share"
            android:layout_width="0dp"
            android:paddingTop="10dp"
            android:layout_height="70dp"
            android:paddingBottom="10dp"
            android:layout_weight="1"
            android:src="@drawable/share_new"
            android:background="@null"/>

        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/iv_copy"
            android:layout_width="0dp"
            android:paddingTop="10dp"
            android:layout_height="70dp"
            android:paddingBottom="10dp"
            android:layout_weight="1"
            android:src="@drawable/copy_new"
            android:background="@null"/>

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/iv_next"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:layout_height="70dp"
            android:paddingBottom="10dp"
            android:src="@drawable/next_new"
            android:background="@null"/>


    </LinearLayout>



    <com.google.android.gms.ads.AdView
        android:id="@+id/ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>




</RelativeLayout>
